{
    // editor
    "editor.tabSize": 4,
    "editor.suggestSelection": "first",
    "editor.rulers": [
        100,
        120
    ],
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 100,
    "editor.wrappingIndent": "same",
    "editor.minimap.renderCharacters": false,
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "smooth",
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false,
    "editor.renderWhitespace": "none",
    "editor.fontSize": 14,
    "editor.fontLigatures": true, // for ligature fonts like Fira Code
    "editor.fontFamily": "FiraCode-Retina, 'Heiti SC', Menlo",
    // "editor.fontFamily": "'Fira Code', 'Microsoft YaHei', Consolas",  // for Windows

    // files
    "files.encoding": "utf8",
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,

    // miscellaneous
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.inheritEnv": false,
    "breadcrumbs.enabled": true, // enable url on top of editor
    "explorer.openEditors.visible": 0,
    "window.zoomLevel": 0,
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#00000033"
    },

    // language specific
    "[c]": {
        "editor.formatOnSave": true,
    },
    "[cpp]": {
        "editor.formatOnSave": true,
    },
    "C_Cpp.enhancedColorization": "Enabled",
    "[python]": {
        "editor.formatOnSave": true,
    },
    // "python.formatting.provider": "autopep8",
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length",
        "88"
    ],
    "python.formatting.autopep8Args": [
        "--max-line-length",
        "80",
    ],
    "python.terminal.activateEnvironment": false,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length",
        "120",
        "--ignore",
        "W503,E203"
    ],
    // E402: module level import not at top of file
    "python.linting.lintOnSave": true,
    "python.languageServer": "Jedi",
    "python.jediEnabled": true,
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.wordWrapColumn": 80,
        "files.trimTrailingWhitespace": false,
    },

    // vim settings
    // "vim.useCtrlKeys": false, // Windows
    "vim.vimrc.enable": false,
    "vim.vimrc.path": "~/vscode.vimrc",
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        },
        {
            "before": [
                "Z",
                "Z"
            ],
            "commands": [
                ":wq"
            ]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [
                "q"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.useSystemClipboard": false,
    // bind : to show the command palette:
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                ":"
            ],
            "commands": [
                "workbench.action.showCommands",
            ]
        }
    ],
    // bind > and < in visual mode to indent/outdent lines (repeatable)
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
    ],
    // "vim.normalModeKeyBindings": [
    //     {
    //         "before": ["j"],
    //         "after": ["g", "j"]
    //     },
    //     {
    //         "before": ["k"],
    //         "after": ["g", "k"]
    //     },
    // ]

    // extension settings
    "code-runner.runInTerminal": true,
    "code-runner.saveFileBeforeRun": true,
    "code-runner.executorMap": {
        "cpp": "cd $dir && g++ $fileName && ./a.out",
    },
    "latex-workshop.view.pdf.viewer": "browser",
    "cSpell.enabled": false,
    "autoDocstring.docstringFormat": "google",
    "bracketPairColorizer.excludedLanguages": [
        "json"
    ],
    "markdownlint.run": "onSave",
    "rewrap.wrappingColumn": 80,
    "leetcode.enableSideMode": false,
    "leetcode.defaultLanguage": "python3",
    "leetcode.showCommentDescription": true,
    "leetcode.hint.configWebviewMarkdown": false,
    "leetcode.hint.commentDescription": false,
    "leetcode.workspaceFolder": "/Users/deng/src/oj-codes/leetcode",
    "leetcode.hint.commandShortcut": false,
}

/*
UNIX: `code --list-extensions | xargs -L 1 echo code --install-extension`
Windows: `code --list-extensions | % { "code --install-extension $_" }`
*/
