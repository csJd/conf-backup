{
    // editor
    "editor.tabSize": 4,
    "editor.suggestSelection": "first",
    "editor.rulers": [100, 120],
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 100,
    "editor.wrappingIndent": "same",
    "editor.minimap.renderCharacters": false,
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "smooth",
    "editor.formatOnPaste": false,
    "editor.renderWhitespace": "none",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,  // for ligature font like Fira Code
    "editor.fontFamily": "FiraCode-Retina, 'Heiti SC', Menlo",
    // "editor.fontFamily": "'Fira Code', 'Microsoft YaHei', Consolas",  // for Windows

    // files
    "files.encoding": "utf8",
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,

    // miscellaneous
    "terminal.integrated.fontSize": 14,
    "breadcrumbs.enabled": true,  // enable url on top of editor
    "explorer.openEditors.visible": 0,
    "window.zoomLevel": 0,
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#00000033"
    },

    // language specific
    "[python]":{
        "editor.formatOnSave": true,
    },
    "python.formatting.provider": "autopep8",
    "python.formatting.autopep8Args": [
        "--max-line-length", "100",
    ],
    "python.linting.lintOnSave": true,
    "python.jediEnabled": false,

    "[c]":{
        "editor.formatOnSave": true,
    },

    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.wordWrapColumn": 80,
    },

    // vim settings
    // "vim.useCtrlKeys": false, // Windows
    "vim.insertModeKeyBindings": [
        {
          "before": ["j", "j"],
          "after": ["<Esc>"]
        },
        {
            "before": ["Z", "Z"],
            "commands": [
                ":wq"
            ]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": ["q"],
            "after": ["<Esc>"]
        }
    ],
    "vim.useSystemClipboard": false,
    // bind : to show the command palette:
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [":"],
            "commands": [
                "workbench.action.showCommands",
            ]
        }
    ],
    // bind > and < in visual mode to indent/outdent lines (repeatable)
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
    ],
    // "vim.normalModeKeyBindings": [
    //     {
    //         "before": ["j"],
    //         "after": ["g", "j"]
    //     },
    //     {
    //         "before": ["k"],
    //         "after": ["g", "k"]
    //     },
    // ]

    // extension settings
    "code-runner.runInTerminal": true,
    "latex-workshop.view.pdf.viewer": "browser",
    "cSpell.enabled": false,
    "autoDocstring.docstringFormat": "google",
    "bracketPairColorizer.excludedLanguages": ["json"],
    "rewrap.wrappingColumn": 80,
    "leetcode.enableSideMode": false,
    "leetcode.defaultLanguage": "python3",
    "leetcode.showCommentDescription": true,
    "leetcode.hint.configWebviewMarkdown": false,
    "leetcode.hint.commentDescription": false,
}

/*
UNIX: `code --list-extensions | xargs -L 1 echo code --install-extension`
Windows: `code --list-extensions | % { "code --install-extension $_" }`
*/

